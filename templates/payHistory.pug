doctype html
html
  head
    title Payment History
    link(rel='stylesheet', type='text/css', href='/static/css/bootstrap.min.css')
    style.
      html, body{
      width: 100%;
      height:100%;
      }
  body
    div(style='margin: 2% 5%')
      h3 Payment History
      table.table.table-striped
        tr
          th NO.
          th Item
          th Price
          th Date
          - if(Items.length){
            - var i = 1;
            - Items.forEach(function(item) {
              tr
                td= i++
                td= item.description
                td= item.amount / 100
                td= item.created
            - });
          - }

      |  
      a.btn.btn-primary.btn-lg(href='/list', role='button') Back to main page
    script(type='text/javascript', src='/static/js/jquery-3.1.1.min.js')

